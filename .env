# Database Configuration
DATABASE_URL=sqlite:///./tmsiti.db
# Для PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/tmsiti
# Для MySQL: DATABASE_URL=mysql://user:password@localhost/tmsiti

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

